@model Hungarian.Models.Contact
@{
    ViewData["Title"] = "About";
}



<div id="myCarousel" class="carousel slide" data-ride="carousel">


    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 " src="~/Images/BackgroundAbout.jpg" Style="height:400px !important;" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="display-2">About Us</h5>



            </div>
        </div>


    </div>


</div>

<div class="row">
    <div class="col-10 mx-auto">
        <div class="card my-3 ">
            <img class="card-img-top  mx-auto" src="~/Images/hungarianLogo.png" style="height:200px; width:350px;" alt="Card image cap">
            <div class="card-body text-center">
                <h5 class="card-title">Aim</h5>
                <p class="card-text">At Hungarian, we promise to serve you the most delicious food to satiate your appetite. </p>
            </div>
        </div>
    </div>
</div>
<div class="row bg-dark text-light py-3">
    
    <div class="display-3 mx-auto">Contact Us</div>
    </div>
    <div class="row bg-dark text-light py-3">
        
    
                <div class="col-md-6 offset-1 float-left border-right border-light">
