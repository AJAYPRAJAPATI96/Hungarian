@model HomeViewModel

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/Background image 2.jpg" Style="height:450px !important;" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="display-4">Welcome</h5>



            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Background image 1.jpg" Style="height:450px !important;" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="display-4">To</h5>

            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Background image 3.jpg" Style="height:450px !important;" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="display-4">Hungarian</h5>

            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

<hr/>

<div class="text-center pt-sm-2">
    <h2 class="text-left">
        Quick Searches

    </h2>
    <h6 class="text-left">Discover The Food You Love.</h6>
    <div class="row">

        <div class="card-img col-3 offset-1">
            <a href="/Menu/List/Snacks">
                <img src="~/Images/category_1.webp" />
                <div class="card-body">

                   <p class="text-dark">Snacks</p>
                </div>
            </a>
        </div>

        <div class="card-img col-3">
            <a href="/Menu/List/Main Course">
                <img src="~/Images/lunch.webp" />
                <div class="card-body">

                    <p class="text-dark">Main Course</p>
                </div>
            </a>
</div>
        <div class="card-img col-3">
            <a href="/Menu">
                <img src="~/Images/pocketf.webp" />
                <div class="card-body">
                    <p class="card-text text-dark">All Dishes</p>
                </div>
            </a>
        </div>
    </div>

</div>
<hr />

    <h2 class="text-left py-sm-2">
        Our Specialty
    </h2>
    <h6 class="text-left  pb-sm-2">we promise you'll love everything.</h6>
